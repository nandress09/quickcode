<Window x:Class="quickcode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:quickcode"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="Calculate" Content="Convert" HorizontalAlignment="Left" Margin="196,199,0,0" VerticalAlignment="Top" Width="75" Click="Calculate"/>
        <TextBox x:Name="r_feet" HorizontalAlignment="Left" Height="23" Margin="304,61,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="r_meter" HorizontalAlignment="Left" Height="23" Margin="304,129,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextChanged="r_meter_TextChanged"/>
        <Label x:Name="tb_Feet" Content="Feet" HorizontalAlignment="Left" Margin="104,61,0,0" VerticalAlignment="Top" Width="69"/>
        <Label x:Name="tb_meter" Content="Meter" HorizontalAlignment="Left" Margin="104,125,0,0" VerticalAlignment="Top" Width="62"/>

    </Grid>
</Window>
